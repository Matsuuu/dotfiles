!--------------------xdefauls
URxvt.font: xft:FantasqueSansMono:size=13,Powerline:size=12
!urxvt*termName: rxvt
URxvt*scrollBar: false
urxvt*matcher.button: 1
URxvt*depth: 32
URxvt*background: [98]#3a3a3a
URxvt.borderColor: [98]#3a3a3a
urxvt.boldFont:
URxvt.letterSpace: -1
URxvt.geometry: 80x18
Xft.dpi: 86
Xft*antialias: true
Xft*hinting: true
Xft*hintstyle: hintfull
URxvt*cursorUnderline: true
URxvt.cursorBlink: true
Xft*rgba: rgb
URxvt.internalBorder: 30
URxvt*fading: 0
URxvt*tintColor: #ffffff
URxvt*transparent: true
URxvt*shading: 50
URxvt*inheritPixmap: False
urxvt*metaSendsEscape: true

! Resizing
! git clone https://github.com/simmel/urxvt-resize-font ~/tmp/urxvt-resize-font
! mv ~/tmp/urxvt-resize-font/resize-font ~/.urxvt/ext/
urxvt.perl-ext-common: default,resize-font
URxvt.resize-font.bigger: Meta-0x2b
URxvt.resize-font.smaller: Meta-0x2d

!URxvt.keysym.Control-Right: \033[1;5C
!URxvt.keysym.Control-Left: \033[1;5D
! disable ctrl-shift
!URxvt*iso14755: False
!URxvt.iso14755_52: False

! special
*.foreground:   #d3d0c8
*.background:   #2d2d2d
*.cursorColor:  #d3d0c8

! black
*.color0:       #2d2d2d
*.color8:       #747369

! red
*.color1:       #f2777a
*.color9:       #f2777a

! green
*.color2:       #99cc99
*.color10:      #99cc99

! yellow
*.color3:       #ffcc66
*.color11:      #ffcc66

! blue
*.color4:       #6699cc
*.color12:      #6699cc

! magenta
*.color5:       #cc99cc
*.color13:      #cc99cc

! cyan
*.color6:       #66cccc
*.color14:      #66cccc

! white
*.color7:       #d3d0c8
*.color15:      #f2f0ec
