# bindsym $mod+space exec albert show
bindsym $mod+space exec ulauncher
bindsym $sup+Return exec alacritty

# Displays
# Disable laptop screen when lid is closed
bindswitch --locked lid:on output eDP-1 disable

# Re-enable laptop screen when lid is opened
bindswitch --locked lid:off output eDP-1 enable

#Query the lid state and apply the correct output state every reload.
exec_always {
    if grep -q closed /proc/acpi/button/lid/*/state; then
        swaymsg output eDP-1 disable
    fi
}

# layout
workspace 1 output eDP-1 
workspace 2 output eDP-1
workspace 3 output eDP-1
workspace 4 output eDP-1

workspace 1 output DP-9
workspace 2 output DP-9
workspace 3 output DP-11
workspace 4 output DP-11


# Includes
include ~/.config/sway/outputs
include ~/.config/sway/workspaces

# Screens

output * adaptive_sync off

# Inputs

input * {
    xkb_layout "fi"

    xkb_options caps:escape
}

input type:pointer {
    accel_profile flat
    pointer_accel 0.3
}

input type:touchpad {
    click_method clickfinger
}

# Borders
default_border none
default_floating_border none

############################
# SwayFX: Shadows / Glow
############################

shadows enable
shadow_blur_radius 14
shadow_color #473a407f


# Shadow offset (negative = up/left)
shadow_offset -3 -4


############################
# Opacity / Transparency
############################

default_dim_inactive 0.1


############################
# Exclusions (Picom shadow-exclude)
############################

# Notifications
for_window [title="Notification"] shadow disable

# App exclusions
for_window [app_id="ulauncher"] border none shadow disable
for_window [app_id="conky"] shadow disable
for_window [app_id="eww"] shadow disable

# GTK CSD windows
for_window [shell="gtk"] shadow disable

# Floating windows
for_window [app_id="google-chrome" title="^Meet â€“"] floating enable, \
    resize set 800 450, \
    move position 1000 40


# Cursor
seat seat0 xcursor_theme Bibata-Modern-Ice 14

# Sway Locking
exec swayidle -w \
  timeout 300 '~/.config/sway/lock' \
  before-sleep '~/.config/sway/lock'


# Sway notifications
exec swaync

