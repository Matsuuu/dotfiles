# bindsym $mod+space exec albert show
bindsym $mod+space exec ulauncher
bindsym $sup+Return exec alacritty

# Gaming m

mode "gaming" {
    bindsym Scroll_Lock exec i3-msg mode "default"; exec notify-send "i3" "Exiting gaming mode"
}
bindsym Scroll_Lock exec i3-msg mode "gaming"; exec notify-send "i3" "Entering gaming mode"

# layout

workspace 1 output DisplayPort-8
workspace 2 output DisplayPort-8
workspace 3 output DisplayPort-10
workspace 4 output DisplayPort-10


# Includes
include ~/.config/sway/outputs
include ~/.config/sway/workspaces


input * {
    xkb_layout "fi"

    xkb_options caps:escape
}

input type:pointer {
    accel_profile flat
    pointer_accel 0.3
}

# Borders
default_border none
default_floating_border none

############################
# SwayFX: Shadows / Glow
############################

shadows enable
shadow_blur_radius 14
shadow_color #473a407f


# Shadow offset (negative = up/left)
shadow_offset -3 -4


############################
# Opacity / Transparency
############################

default_dim_inactive 0.1


############################
# Exclusions (Picom shadow-exclude)
############################

# Notifications
for_window [title="Notification"] shadow disable

# App exclusions
for_window [class="ulauncher"] border none shadow disable
for_window [app_id="conky"] shadow disable
for_window [app_id="eww"] shadow disable

# Panels / bars
for_window [app_id="polybar"] shadow disable

# GTK CSD windows
for_window [shell="gtk"] shadow disable


